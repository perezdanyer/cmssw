validations
{
    GCP
    {  
        MyFirstComparison
        {
            reference EOY17
            test UL17
            IOV "123456 234567"
        }
        The2ndComparison
        {
            reference UL17
            test EOY17
            IOV "123456 234567"
        }
    }

    DMR
    {
        single
        {
            TheDataIsoMu
            {
                alignments "UL17 EOY17"
                maxevents 2000000                       
                maxtracks 1800000                       
                maxhits 300                             
                minhits 15                              
                dataset Data_Filename_*_cff.py
                trackcollection ALCARECOTkAlMuonIsolated
                magneticfield true                      
                IOV "123456 345678"
            }
            TheDataIsoMu2
            {
                alignments "UL17 EOY17"
                maxevents 2000000                       
                maxtracks 1800000                       
                maxhits 300                             
                minhits 15                              
                dataset Data_Filename_*_cff.py
                trackcollection ALCARECOTkAlMuonIsolated
                magneticfield true                      
                IOV "123456 234567 345678"
                condor nextweek.sub
            }
            MyMCisoMuValidation
            {
                alignments MC17
                maxevents 2000000                       
                maxtracks 1800000                       
                maxhits 300                             
                minhits 15                              
                dataset MC_Filename_cff.py
                trackcollection ALCARECOTkAlMuonIsolated
                magneticfield true                      
            }
        }

        merge 
        {
            DataMC
            {
                singles "TheDataIsoMu TheDataIsoMu2 MyMCisoMuValidation"
                legendoptions mean
                usefit false
                curves plain
                customrighttitle IOV
            }
            UL
            {
                singles TheDataIsoMu
                legendoptions "mean rms"
                usefit false
                curves "plain split layers"
                customrighttitle IOV
            }
        }

        trend
        {
            UL
            {
                merge UL
                year 2017
                pixelupdatelist true
                showpixelupdate true
                showlumi true
            }
        }
    }
}
