name TheValidation
LFS /afs/cern.ch/work/p/paconnor/example
condor default.sub

alignments
{
    UL17
    {
        globaltag 106X_dataRun2_v4
        conditions
        {
            TrackerAlignmentRcd
            {
                connect frontier://FrontierProd/CMS_CONDITIONS
                tag TrackerAlignment_2017_ultralegacy_v1
                label ""
            }
            TrackerSurfaceDeformationRcd
            {
                connect frontier://FrontierProd/CMS_CONDITIONS
                tag TrackerSurfaceDeformations_2017_ultralegacy_v1
                label ""
            }
        }
        color kBlue
        style 2101
        title UL17
    }

    EOY17
    {
        globaltag 94X_dataRun2_ReReco_EOY17_v2
        color kRed
        style 2101
        title EOY17
    }

    MC17
    {
        globaltag 94X_mc2_scenario_v42
        color kGreen+2
        style 2102
        title MC17
        files
        {
            DMR
            {
                single
                {
                    TheDataIsoMu /path/to/rootfile
                }
            }
        }
    }
